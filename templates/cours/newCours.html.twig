{% extends 'admin/admin-home.html.twig' %}
{% block title %}
    {{ title }}
{% endblock %}
{% block content %}
    <div class="container mt-3">
        <h1 class="mb-3">{{ title }}</h1>
    </div>

    <div class="form-control">
        {{ form_start(coursForm) }}
        <div class="col">
            <div class="mb-3">
                <label for="coursForm[nom]" class="form-label">{{ form_label(coursForm.nom) }}</label>
                {{ form_widget(coursForm.nom, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

            <div class="row">
                <div class="mb-3">
                    <label for="coursForm[date_debut]" class="form-label">{{ form_label(coursForm.date_debut) }}</label>
                    {{ form_widget(coursForm.date_debut, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="mb-3">
                    <div class="mb-3">
                        <label for="coursForm[date_fin]" class="form-label">{{ form_label(coursForm.date_fin) }}</label>
                        {{ form_widget(coursForm.date_fin, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
            </div>


            <div class="mb-3">
                <label for="coursForm[Intervenant]" class="form-label">{{ form_label(coursForm.Intervenant) }}</label>
                {{ form_widget(coursForm.Intervenant, {'attr': {'class': 'form-control'}}) }}
            </div>

        <div class="mb-3">
            <label for="coursForm[Matiere]" class="form-label">{{ form_label(coursForm.Matiere) }}</label>
            {{ form_widget(coursForm.Matiere, {'attr': {'class': 'form-control'}}) }}
        </div>

        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >
        <button class="btn btn-lg btn-primary" type="submit">
            Sign in
        </button>

        {{ form_end(coursForm) }}
    </div>
{% endblock %}