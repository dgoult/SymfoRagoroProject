{% extends 'admin/admin-home.html.twig' %}

{% block title %}Cours{% endblock %}

{% block content %}
    <h1>Cours</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ cour.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ cour.nom }}</td>
            </tr>
            <tr>
                <th>Date_debut</th>
                <td>{{ cour.dateDebut ? cour.dateDebut|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Date_fin</th>
                <td>{{ cour.dateFin ? cour.dateFin|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Duree_minutes</th>
                <td>{{ cour.dureeMinutes }}</td>
            </tr>
        </tbody>
    </table>
    <div class="row">
        <div class="col">
            <a class="btn btn-primary" href="{{ path('cours_list') }}">Retour Ã  la liste</a>
        </div>
        <div class="col">
            <a class="btn btn-primary" href="{{ path('cours_edit', {'id': cour.id}) }}">Modifier</a>
        </div>
        <div class="col">
            {{ include('forms/_delete_form.html.twig') }}
        </div>
    </div>

{% endblock %}
