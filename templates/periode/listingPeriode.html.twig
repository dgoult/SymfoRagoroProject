{% extends 'admin/admin-home.html.twig' %}
{% block title %}
    {{ title }}
{% endblock %}
{% block content %}
    <h3>Periodes</h3>
    <div class="d-flex justify-content-end">
        <a class="mr-auto btn btn-primary " href="{{ path('periode_new') }}">Créer</a>
    </div>
    <div class="listing-periode">
        <table class="table">
            <thead>
            <tr>
                <th>ID</th>
                <th>Nom</th>
                <th>Date de début</th>
                <th>Date de fin</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>

            {% for periode in periodes %}
                <tr>
                    <td>{{ periode.id }}</td>
                    <td>{{ periode.nom }}</td>
                    <td>{{ periode.dateDebut | format_datetime('short', 'none', locale='fr') }}</td>
                    <td>{{ periode.dateFin | format_datetime('short', 'none', locale='fr') }}</td>
                    <td>
                        <a class="btn btn-primary" href="{{ path('periode_edit', { 'id': periode.id}) }}">Modifier</a>
                        <a class="btn btn-danger" href="{{ path('periode_delete', { 'id': periode.id}) }}">Supprimer</a>
                    </td>
                </tr>
            {% endfor %}

            </tbody>
        </table>

    </div>

{% endblock %}