{% extends 'admin/admin-home.html.twig' %}
{% block title %}
    {{ title }}
{% endblock %}
{% block content %}
    <h3>Matière</h3>
    <div class="listing-matiere">
        <table class="table">
            <thead>
            <tr>
                <th>ID</th>
                <th>Nom</th>
                <th>Date début</th>
                <th>Date fin</th>
                <th>Durée</th>
            </tr>
            </thead>
            <tbody>

            {% for matiere in matieres %}
                <tr>
                    <td>{{ matiere.id }}</td>
                    <td>{{ matiere.intitule }}</td>
                    <td>{{ matiere.duree }}</td>
                    <td>
                        <a class="btn btn-primary" href="{{ path('matiere_edit', { 'id': matiere.id}) }}">Modifier</a>
                        <a class="btn btn-danger" href="{{ path('matiere_delete', { 'id': matiere.id}) }}">Supprimer</a>
                    </td>
                </tr>
            {% endfor %}

            </tbody>
        </table>

    </div>

{% endblock %}