{% block calendar %}
    <a class="btn btn-primary" href="{{ path('cours_new') }}">Ajouter un cours</a>
    <br />
    <br />
    <div
        id="calendar-holder"
        data-events-url="{{ path('fc_load_events') }}"
    ></div>

    <div class="modal fade" id="calendarModal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Event Details</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <!-- Event details will be added here -->

                    <div class="container">
                        {{ form_start(form) }}
                            <div class="form-group">
                                {{ form_label(form.commentaire_text, 'Comment') }}
                                {{ form_widget(form.commentaire_text, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(form.cours, 'Cours') }}
                                {{ form_widget(form.cours, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <button type="submit" class="btn btn-primary">Submit</button>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}


{% block stylesheets %}
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('calendar') }}
{% endblock %}