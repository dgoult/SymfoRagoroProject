{% extends 'admin/admin-template.html.twig' %}

{% block title %}
    {{ title }}
{% endblock %}

{% block content %}
    <div class="container">

        <div class="row">
            <div class="col">
                <h2>{{ title }}</h2>
                <div class="formation-details">
                    <span>Date de début : {{ formation.dateDebut|format_datetime('full', 'none', locale='fr') }}</span>
                    <br />
                    <span>Date de fin : {{ formation.dateFin|format_datetime('full', 'none', locale='fr') }}</span>
                </div>
            </div>
            <div class="col">
                <h3>Informations</h3>
                <div class="formation-details">
                    <span>Nombre d'intervenant : 23</span>
                    <span>Heures de cours restante à assigner : {{ dureeTotalCours }}</span>
                </div>
            </div>

            <div class="">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Intervenant</th>
                            <th colspan="100%"></th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for intervenant, stats in statsIntervenant %}
                            <tr>
                                <td>{{ intervenant }}</td>
                                {% for matiere, stat in stats %}
                                    <td style="border-color: {{ stat.couleur }}; border-width: 2px">{{ matiere }} {{ stat.h }}h {{ stat.m }}m</td>
                                {% endfor %}
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>

            {{ dump(statsIntervenant) }}
        </div>
    </div>
{% endblock %}